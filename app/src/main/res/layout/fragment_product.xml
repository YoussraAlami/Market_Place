<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!-- First CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cat_nav_img_1"
                        android:background="@drawable/border"
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img88"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nav_cat_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Iphone 11"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="2"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <Button
                                android:id="@+id/button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#8692f7"
                                android:text="Edit" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nav_cat_description_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6400dh"
                                android:textColor="#8692f7"
                                android:layout_weight="2"
                                android:textSize="18sp"
                                />

                            <Button
                                android:id="@+id/button11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#A4ADF6"
                                android:text="Delete" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="iphone 11 disponible"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- third CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cat_nav_img_2"
                        android:background="@drawable/border"
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img22"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingTop="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/nav_cat_name_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Iphone 12"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="2"
                                android:textStyle="bold"
                                android:textColor="@color/black"/>

                            <Button
                                android:id="@+id/button32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#8692f7"
                                android:text="Edit" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/nav_cat_description_third"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7500dh"
                                android:textColor="#8692f7"
                                android:layout_weight="2"
                                android:textSize="18sp"
                                />

                            <Button
                                android:id="@+id/button31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#A4ADF6"
                                android:text="Delete" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="iphone 12 disponible"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/AddProduct"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:backgroundTint="#8692f7"
            android:text="+"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>